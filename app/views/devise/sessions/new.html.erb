<div class="panel panel-default">
  <div class="facebook">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to image_tag("facebook.png", class:"facebook-img"), omniauth_authorize_path(resource_name, provider) %><br />
      <% end -%>
    <% end -%>
  </div>
  <p class="or"> or </p>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "your email", class: "form-control" %>
      </div>

      <div class="form-group inputContainer">
        <%= f.password_field :password, autocomplete: "off", placeholder: "password", class: "form-control" %>
        <%= link_to t(".forgot_your_password", :default => "forgot?"), new_password_path(resource_name), class: "link-input" %>
      </div>

      <div class="row">
        <div class="col-xs-4">
          <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
        </div>

        <div class="col-xs-6 remember-check-box">
          <% if devise_mapping.rememberable? %>
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "remember_me" %>
              </label>
            </div>
          <% end %>
        </div>

      </div>

    <% end %>
  </div>

  <div class="col-xs-12">
    <p>
      Don't have an account?
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to t(".sign_up", :default => "Sign up"), new_registration_path(resource_name), class: "sign-up-btn" %><br />
      <% end -%>
    </p>
  </div>

</div>
