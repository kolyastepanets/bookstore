<%= bootstrap_devise_error_messages! %>
<div class="panel panel-default">
  <div class="facebook">
    <%= image_tag("facebook.png", class:"facebook-img") %>
  </div>
  <p class="or"> or </p>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.text_field :firstname, autofocus: true, placeholder: "your name*", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, placeholder: "your lastname*", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, placeholder: "your email*", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: "password*", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "confirm password*", class: "form-control" %>
      </div>

      <%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary" %>

    <% end %>
  </div>

  <div class="col-xs-12">
    <p>
      Have an account?
      <%- if controller_name != 'sessions' %>
        <%= link_to t(".sign_in", :default => "Sign in"), new_session_path(resource_name), class: "sign-up-btn" %><br />
      <% end -%>
    </p>
  </div>

</div>